<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:weightSum="8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_one"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_one"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_two"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_two"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_three"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_three"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_divide"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="@string/button_divide"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:weightSum="8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_four"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_four"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_five"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_five"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_six"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_six"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_subtract"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="@string/button_dot"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:weightSum="8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_seven"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_eight"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_eight"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_nine"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_nine"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_plus"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="@string/button_sum"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:weightSum="8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_clear"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_zero"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_zero"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/button_dot"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
            <Button
                android:id="@+id/button_equal"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="@string/button_equal"
                android:onClick="operationFunction"

                android:textSize="18sp"
                app:fontFamily="sans-serif"

                android:layout_weight="2"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>